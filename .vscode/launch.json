{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run NakrutkaGuard Bot",
            "type": "debugpy",
            "request": "launch",
            "module": "bot.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug NakrutkaGuard Bot",
            "type": "debugpy",
            "request": "launch",
            "module": "bot.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "logToFile": true
        },
        {
            "name": "Test Username Analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_username_analysis.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}
